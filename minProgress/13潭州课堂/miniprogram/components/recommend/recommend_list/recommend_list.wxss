/* components/recommend/reommend_list/recommend_list.wxss */
.list {
  height: 550rpx;
}

.flex {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.lesson {
  width: 350rpx;
  height: 250rpx;
  border: 1px solid #aaa;
}

.lesson image {
  display: block;
  width: 350rpx;
  height: 200rpx;
}

.lesson .title {
  line-height: 50rpx;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}