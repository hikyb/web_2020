.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  filter: blur(0.6px);
  z-index: -1;
}

.title {
  margin: 30vh 0 30px;
  text-align: center;
  font-size: 30px;
  color: #fff;
}

.search {
  width: 80vw;
  margin: 0 auto;
}

.input {
  padding-left: 3px;
  height: 4.7vh;
  border: 1px solid #fff;
  border-radius: 3px;
  color: #fff;
}

.btn {
  float: rigth;
  margin-left: 3px;
  width: 15vw;
  height: 5vh;
  background-color: #fff;
  font-size: 12px;
  line-height: 5vh;
}
